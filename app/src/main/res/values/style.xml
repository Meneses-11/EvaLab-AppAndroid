<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para los botones del menú Principal -->
    <style name="btnMenuPrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">25dp</item>
        <item name="fontFamily">@font/onesans_medium</item>
    </style>


    <!-- Estilo para la lista del menú de Categorias -->
    <!-- Layout principal de cada opción-->
    <style name="layoutPrincipalCategorias">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/menu_option_background</item>
    </style>
    <!-- Ícono para cada opción del menú-->
    <style name="iconoMenuCategorias">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
    <!-- Texto para cada opción del Menú -->
    <style name="txtMenúCategorias">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/onest_medium</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>


    <!-- Estilo para el menú de los organos del cuerpo -->
    <!-- Fila que contendrá 2 opciones -->
    <style name="filaPrincipalMenuOrganos">
        
    </style>
    <!-- Layout que le dara forma a las opciones-->
    <style name="formaOpcionMenuOrganos">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:background">@drawable/fondo_opt_menu_organos</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <!-- Fila del semaforo y titulo -->
    <style name="fila1OpcionMenuOrganos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Contenedor de la primera fila -->
    <style name="layoutFila1OpcionMenuOrganos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!-- Imagen del semaforo -->
    <style name="imgEstadoMenuOrganos">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <!-- Titulo de la Opcion -->
    <style name="txtNombreOpcionMenuOrganos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
    </style>
    <!-- Fila de la imagen principal -->
    <style name="fila2OpcionMenuOrganos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Imagen princial -->
    <style name="imgPrincipalOpcionMenuOrganos">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- Fila del estado de la opcion -->
    <style name="fila3OpcionMenuOrganos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Texto del Estado de la opcion -->
    <style name="txtEstadoOpcionMenuOrganos">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/dmsans_semibolditalic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Sección para las vistas de los Tipos de Examenes -->
    <!-- Estilo del Titulo de los Diferentes tipos de Examenes -->
    <!-- Layout que contendra el titulo y el ícono -->
    <style name="layoutTituloExamenes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorFondoClaro</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <!-- Ícono que acompañará al Titulo -->
    <style name="iconoTituloExamenes">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
    <!-- Titulo de los Diferentes Tipos de Examenes -->
    <style name="txtTituloExamenes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/youngserif_regular</item>
    </style>
    <!-- Estilo para el contenido -->
    <!-- Layout que contiene la lista -->
    <style name="layoutContenidoExamenes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">45dp</item>
    </style>
    <!-- Linea separadora -->
    <style name="separadorContenidoExamenes">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#535353</item>
    </style>
    <!-- Linea separadora inmedio -->
    <style name="separador2ContenidoExamenes">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#535353</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <!-- Texto de cada opcion en la lista -->
    <style name="txtContenidoExamenes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/menu_option_background</item>
        <item name="android:drawableStart">@drawable/vinieta</item>
    </style>
    <!-- Imagen de abajo -->
    <style name="imgContenidoExamenes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:src">@drawable/laboratoriopruebas</item>
    </style>


    <!-- Seccion de estilos para los formularios de todos los diferentes Examenes Clínicos -->
    <!-- Estilo para el título del Examen clínico -->
    <style name="txtTituloExamenEspecifico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:fontFamily">@font/tiltneon_regular</item>
    </style>
    <!-- Scroll que contiene todo el contenido -->
    <style name="scrollExamenEspecifico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <!-- Layout que contendrá cada opción-->
    <style name="layoutOpcionExamenEspecifico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/whiteTransparent</item>
    </style>
    <!-- Texto nombre de cada opcion -->
    <style name="txtNombreOpcionExamenEspecifico">
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
    </style>
    <!-- Contenedor del EditText -->
    <style name="txtFieldNumOpcionExamenEspecifico">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/strExamenHint</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeColor">@drawable/border_color_opc_exam_especif</item>
    </style>
    <!-- Contenedor del EditText tipo Lista-->
    <style name="txtFieldListaOpcionExamenEspecifico" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeColor">@drawable/border_color_opc_exam_especif</item>
    </style>
    <!-- EditText donde se introduciran los datos -->
    <style name="editTxtNumOpcionExamenEspecifico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- EditText donde se escogerán los datos de la lista -->
    <style name="editTxtListaOpcionExamenEspecifico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Texto que indica la unidad de medida -->
    <style name="txtUnidadMedidaOpcionExamenEspecifico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
    </style>
    <style name="txtUnidadMedida2OpcionExamenEspecifico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
    </style>
    <!-- Linea que divide cada opción -->
    <style name="lineaDivOpcionesExamenEspecifico">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="lineaDiv2OpcionesExamenEspecifico">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_theme_light_primary</item>
    </style>
    <!-- Boton Analizar -->
    <style name="btnAnalizar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:text">@string/strBtnAnali</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
    </style>

    <!-- Estilo para las opciones del Tab Layout -->
    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/kanit_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Estilos para el Fragment de Resultados -->
    <!-- Contenedor del EditText tipo Lista-->
    <style name="txtFieldBuscarExamen" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/whiteTransparent</item>
        <item name="boxStrokeColor">@drawable/border_color_opc_exam_especif</item>
        <item name="android:hint">@string/strFragResultBuscar</item>
    </style>
    <!-- EditText donde se escogerán los datos de la lista -->
    <style name="editTxtBuscarExamen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Texto a mostrar cuando no hay registros -->
    <style name="txtFragResultNoHayDatos">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">55dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/whiteTransparent</item>
    </style>
    <!-- Boton a mostrar cuando no hay registros -->
    <style name="btnFragResultNoHayDatos">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:text">@string/strSinResResultBtn</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
    </style>

    <!-- Estilos para la lista de Resultados -->
    <!-- Estilo para el texto que no cambiará en las cards-->
    <style name="listResultTextoFijoCard">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/varelaround_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Estilo para el texto que cambiará en las cards-->
    <style name="listResultTextoVariaCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gabarito_variablefont</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>



    <!-- Estilos para la ventana de perfil de Usuario -->
    <!-- TextView que contendrá el nombre del usuario-->
    <style name="perfilUserTxtNombre">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/robotoslab_variablefont</item>
    </style>
    <!-- Estilo para el fondo de los contenedores -->
    <style name="perfilUserFondoContenedor">
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/fondo_usuario_perfil</item>
        <item name="android:elevation">8dp</item>
    </style>
    <!-- Estilo para el texto en general -->
    <style name="perfilUserTxtNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/robotoslab_variablefont</item>
    </style>
    <!-- Estilo para el texto de numeros -->
    <style name="perfilUserTxtNumeros">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gabarito_variablefont</item>
    </style>

</resources>