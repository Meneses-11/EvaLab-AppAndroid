                <TextView
                    style="@style/txtNombreOpcionExamenEspecifico"
                    android:text="@string/strAlbumina"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/txtFieldNumOpcionExamenEspecifico"
                    >

                    <com.google.android.material.textfield.TextInputEditText
