                <TextView
                    style="@style/txtNombreOpcionExamenEspecifico2"
                    android:text="@string/strHormonaT3L"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/txtFieldNumOpcionExamenEspecifico"
