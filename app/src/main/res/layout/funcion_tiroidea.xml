                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/funTiroidesTextFieldT3L"
                        style="@style/editTxtNumOpcionExamenEspecifico"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/txtUnidadMedidaOpcionExamenEspecifico"
                    android:text="@string/strPicogramosMililitro"/>

            </LinearLayout>
            <View style="@style/lineaDiv2OpcionesExamenEspecifico"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <Button
            android:id="@+id/funTiroidesBotonAnalizar"
            style="@style/btnAnalizar"/>

    </LinearLayout>

</LinearLayout>