<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarios.InformacionPerfil"
    android:orientation="vertical"
    android:background="@drawable/fondoprincipal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorFondoClaro">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                style="@style/perfilUserTxtNombre"
                android:text="Adrian Manuel"
                />

            <TextView
                style="@style/perfilUserTxtNombre"
                android:text="Meneses López"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/usuario"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/contPrueba"
                    android:layout_gravity="center"
                    style="@style/perfilUserFondoContenedor"
                    android:layout_width="150dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/homb"
                        />
                    <TextView
                        style="@style/perfilUserTxtNormal"
                        android:text="@string/strInfUserMasc"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    style="@style/perfilUserFondoContenedor"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/mujer"
                        />
                    <TextView
                        style="@style/perfilUserTxtNormal"
                        android:text="@string/strInfUserFeme"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="350dp"
                style="@style/perfilUserFondoContenedor"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/perfilUserTxtNormal"
                    android:text="@string/strInfUserFecha"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/calendario"/>

                    <TextView
                        style="@style/perfilUserTxtNumeros"
                        android:layout_marginLeft="15dp"
                        android:text="19/03/2002"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center">

                    <TextView
                        style="@style/perfilUserTxtNumeros"
                        android:text="21"/>

                    <TextView
                        style="@style/perfilUserTxtNormal"
                        android:layout_marginLeft="10dp"
                        android:text="Años"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="150dp"
                    style="@style/perfilUserFondoContenedor"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        style="@style/perfilUserTxtNormal"
                        android:layout_marginBottom="25dp"
                        android:text="@string/strInfUserAltura"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/altura1"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            style="@style/perfilUserTxtNumeros"
                            android:layout_width="40dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="textEnd"
                            android:text="1.74"/>
                        <TextView
                            style="@style/perfilUserTxtNumeros"
                            android:text="@string/strMetro"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    style="@style/perfilUserFondoContenedor"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        style="@style/perfilUserTxtNormal"
                        android:layout_marginBottom="25dp"
                        android:text="@string/strInfUserPeso"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bascula"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            style="@style/perfilUserTxtNumeros"
                            android:layout_width="40dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="textEnd"
                            android:text="64"/>
                        <TextView
                            style="@style/perfilUserTxtNumeros"
                            android:text="@string/strKilogramo"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center">

<!--        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:contentDescription=""
                android:text="Eliminar"
                app:icon="@drawable/eliminar"
                />

        </LinearLayout>  -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:contentDescription=""
                android:text="@string/strBtnEdit"
                android:textSize="20dp"
                app:icon="@drawable/editar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:contentDescription=""
                android:text="@string/strBtnCamb"
                android:textSize="20dp"
                app:icon="@drawable/cambio"
                />

        </LinearLayout>

    </TableRow>

