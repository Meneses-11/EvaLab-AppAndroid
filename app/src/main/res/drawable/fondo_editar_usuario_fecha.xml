<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Configuración cuando se presiona -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorFondoClaroNoTrasnparente"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
        </shape>
    </item>
    <!-- Configuración en estado Normal -->
    <item>
        <shape>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
        </shape>
    </item>

</selector>